<h1 class="text-center titre">This is the login form</h1>

<div class="container">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-6 mt-4">
            <%= form_with(scope: :session, url: login_path, local: true ) do |form| %>
                <div class="form-group mt-2">
                    <%= form.label :email, class: "form-label"%>
                    <%= form.email_field :email, class: "form-control bd"%>
                </div>
                <div class="form-group mt-2">
                    <%= form.label :password, class: "form-label"%>
                    <%= form.password_field :password, class: "form-control bd"%>
                </div>
                <div class="col-2 mt-3">
                    <%= form.submit "Log in", class: "button btn-large btn" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
