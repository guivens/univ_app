<div class="container">
    <% if @student.errors.any? %>
        <ul>
            <% @student.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg  %>
                </li>
            <% end %>
        </ul>
    <% end %>
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-6 mt-4">
                <%= form_with model: @student, local: true do |form| %>
                    <div class="form-group mb-2">
                        <%= form.label :name, class: "form-label" %>
                        <%= form.text_field :name, class: "col-12 form-control bd"%>
                    </div>
                    <div class="form-group mt-2">
                        <%= form.label :email, class: "form-label"%>
                        <%= form.email_field :email, class: "form-control bd"%>
                    </div>
                    <div class="form-group mt-2">
                        <%= form.label :password, class: "form-label"%>
                        <%= form.password_field :password, class: "form-control bd"%>
                    </div>
                    <div class="col-2 mt-3">
                        <%= form.submit class: "button btn-large btn" %>
                    </div>
                <% end %>
        </div>
    </div>
</div>