<div class="container">
    <div class="row">
      <% object.each do |object| %>
          <div class="col-4">
            <div class="card m-2" style="width: 20rem; ">
                  <div class="card-body">
                    <h5 class="card-title"><%= object.short_name %>:<%= object.name %></h5>
                    <p class="card-text"><%= object.description%></p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                  </div>
            </div>
          </div>
      <% end %>    
    </div>
  </div>